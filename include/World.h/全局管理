#pragma once
#include <vector>
#include <algorithm>
class Collider;

class World {
private:
    std::vector<Collider*> colliders;
public:
    void AddCollider(Collider* col) { colliders.push_back(col); }
    void RemoveCollider(Collider* col) {
        colliders.erase(std::remove(colliders.begin(), colliders.end(), col), colliders.end());
    }
    void UpdateCollisions(); // 实现不变，仅移除全局实例
};
